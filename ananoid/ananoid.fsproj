<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <VersionPrefix>0.7.0</VersionPrefix>
        <Title>Ananoid</Title>
        <Authors>Mulberry Labs, BV</Authors>
        <Description>Provides nano identifiers, an alternative to UUIDs (inspired by https://github.com/ai/nanoid).</Description>
        <Copyright>2023 © Mulberry Labs, BV. All rights reserved.</Copyright>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DocumentationFile>obj/Debug/net7.0/ananoid.xml</DocumentationFile>
        <VersionSuffix>debug</VersionSuffix>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>obj/Release/net7.0/ananoid.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="Library.fsi" />
        <Compile Include="Library.fs" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Update="FSharp.Core" Version="7.0.0" />
    </ItemGroup>

</Project>
